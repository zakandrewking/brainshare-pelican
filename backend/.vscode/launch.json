{
  "version": "0.2.0",
  "configurations": [
    // TODO split in two
    {
      "type": "python",
      "request": "launch",
      "name": "[Backend] Debug queue",
      "module": "celery",
      "args": ["-A", "backend.tasks", "worker", "--loglevel", "INFO"],
      "envFile": "${workspaceFolder}/.env.local"
    },
    {
      "type": "python",
      "request": "launch",
      "name": "[Backend] Debug server",
      "module": "uvicorn",
      "args": [
        "backend.main:app",
        "--port",
        "8030",
        "--host",
        "0.0.0.0",
        "--reload"
      ],
      "envFile": "${workspaceFolder}/.env.local"
    }
  ]
}
