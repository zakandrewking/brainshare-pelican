{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "[Frontend] Launch Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3030"
    },
    {
      "name": "Debug frontend",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev",
      "env": {
        "PORT": "3030"
      },
      "serverReadyAction": {
        "pattern": "started server on .+, url: (https?://.+)",
        "action": "startDebugging",
        "name": "[Frontend] Launch Chrome"
      }
    }
  ]
}
